{
  "version": 2,
  "name": "comic-meteor",
  "alias": "comic-meteor",
  "routes": [
    {
      "src": "/",
      "dest": "index.html"
    },
    {
      "src": "/robots.txt",
      "dest": "robots.txt"
    },
    {
      "src": "/(.*)",
      "dest": "index.js"
    }
  ],
  "builds": [
    {
      "src": "index.js",
      "use": "@now/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "index.html",
      "use": "@now/static"
    },
    {
      "src": "robots.txt",
      "use": "@now/static"
    }
  ]
}
